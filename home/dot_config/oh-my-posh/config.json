{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "palette": {
    "blue": "#89b4fa",
    "overlay0": "#6e738d",
    "surface0": "#313244",
    "text": "#cdd6f4"
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:overlay0",
    "template": "{{ .Segments.Path.Text }}{{ .Segments.Text.Text }} "
  },
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "background": "p:surface0",
          "template": " \ueba2 {{ .FormattedMs }}",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "foreground": "p:blue",
          "properties": {
            "style": "agnoster"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "template": "{{ .HEAD }} ",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:text",
          "template": "\u276f"
        }
      ]
    }
  ]
}
