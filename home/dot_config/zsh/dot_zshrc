# Homebrew
export HOMEBREW_NO_ENV_HINTS=1
if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
fi

#
fpath=($ZDOTDIR/functions $fpath)
autoload -Uz $ZDOTDIR/functions/*(:t)

# History
HISTFILE="$ZDOTDIR/.zsh_history"
HISTSIZE=50000
SAVEHIST=10000
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_verify
setopt share_history

# ZSH completions
autoload -Uz compinit
compinit

# 1Password completions
eval "$(op completion zsh)"; compdef _op op

# Starship
eval "$(starship init zsh)"

# asdf
export RUBY_CONFIGURE_OPTS="--with-openssl-dir=$(brew --prefix openssl@1.1)"
. $(brew --prefix asdf)/libexec/asdf.sh

# Yarn
if type yarn &> /dev/null
then
  export PATH="$(yarn global bin):$PATH"
fi

# Ripgrep
export RIPGREP_CONFIG_PATH="/Users/zspoelstra/.config/ripgrep/config"

# zsh-vi-mode
ZVM_VI_INSERT_ESCAPE_BINDKEY=jj
source $(brew --prefix)/opt/zsh-vi-mode/share/zsh-vi-mode/zsh-vi-mode.plugin.zsh

# zsh-autosuggestions
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh
bindkey '^ ' autosuggest-accept

# Aliases
alias bex='bundle exec'
alias c='clear'
alias cd..='cd ..'
alias cp='cp -i'
alias cz='chezmoi'
alias la='ls -al'
alias ll='ls -l'
alias ls="lsd --ignore-glob=$'Icon\r'"
alias lt='ls --tree'
alias mv='mv -i'
alias rm='rm -i'
alias tree='lt'
alias vim='nvim'

# Aliases (work)
alias utfb-gem-push="gem push --key github --host https://rubygems.pkg.github.com/untappd"
alias utfb-packages-js="cd ~/Code && cd utfb-packages"
alias utfb-packages-ruby="cd ~/Code && cd utfb-packages-ruby"
